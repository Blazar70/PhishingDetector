@model Scan
@{
    ViewData["Title"] = "Edit Scan";
}

<h2>Edit Scan</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-2">
        <label asp-for="Text"></label>
        <input asp-for="Text" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
